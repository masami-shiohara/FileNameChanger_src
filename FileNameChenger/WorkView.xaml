            </Button.Triggers>
            Run</Button>
        <Image Canvas.Left="110" Canvas.Top="100" Width="80" Height="80" Margin="27,0,50,77" Name="imageWork" Stretch="Fill" Source="file:///F:/リネージュ/fansiteKitThrone1/07.ロゴ/リネージュII.jpg" Opacity="1" Loaded="imageWork_Loaded">
